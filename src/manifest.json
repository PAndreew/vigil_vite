{
  "manifest_version": 3,
  "name": "Vigil - Privacy-First DLP",
  "version": "1.3.6",
  "description": "Prevents leakage of sensitive data through AI chatbots by analyzing pasted content locally.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "pii-rules.json", "src/iframe/iframe.html", "fonts/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}